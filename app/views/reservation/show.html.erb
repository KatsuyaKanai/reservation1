<div class= "notifications"></div>
<p id= "notice">Reservation was successfully created.</p>
<div class= "container-fiuld reservation-result">
    <div class= "row">
        <div class= "col-md-12 user-view">
            <div class="user-view-box">
                <%= form_with model: @reservation, class: "update-content" do |f| %>
                    <%= f.hidden_field :id %>
                    <%= f.label :room_name, "予約した部屋", class: "col-md-3 update-content" %>
                    <p class= "col-md-9"><%= @room.room_name %></p>
                    <%= f.label :start_date, "開始日", class: "col-md-3 update-content" %>
                    <p class= "col-md-9"><%= @reservation.start_date %></p>
                    <%= f.label :end_date, "終了日", class: "col-md-3 update-content" %>
                    <p class= "col-md-9"><%= @reservation.end_date %></p>
                    <%= f.label :total_price, "価格", class: "col-md-3 update-content" %>
                    <p class= "col-md-9"><%= @reservation.total_price %>円</p>
                <% end %>
            </div>
        </div>
    </div>
</div>
